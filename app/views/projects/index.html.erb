<div class="project-index-container">
  <!-- Banner -->

<!-- Search & Icons -->
<div class="search-container">

  <!-- Search-->
  <div class="seach mt-4 mb-4">
    <div class="search-bar">
      <%= form_tag(projects_path, method: :get) do %>
        <%= text_field_tag :query, params[:query], :placeholder => "Find Interesting Projects Today!", class: "form-control", id: "landing-page-search-form" %>
      <% end %>
    </div>
  </div>

  <!-- Icons -->
  <div class="icons mt-5 mb-5">
    <!-- Animals -->
    <div class="cat-filter">
      <i class="fas fa-frog fa-2x filter text-center" title="Animals"></i>
      <p class="ml-3 mt-2">Animals</p>
    </div>
    <!-- Biology -->
    <div class="cat-filter">
      <i class="fas fa-dna fa-2x filter" title="Biology"></i>
      <p class="ml-3 mt-2">Biology</p>
    </div>
    <!-- Chemistry -->
    <div class="text-center cat-filter">
      <i class="filter fas fa-flask fa-2x mr-3" title="Chemistry"></i>
      <p class="ml-3 mt-2">Chemistry</p>
    </div>
    <!-- Ecology -->
    <div class="cat-filter">
      <i class="filter fas fa-seedling fa-2x" title="Ecology"></i>
      <p class="ml-3 mt-2">Ecology</p>
    </div>
    <!-- History -->
    <div class="cat-filter">
      <i class="filter fas fa-history fa-2x" title="History"></i>
      <p class="ml-3 mt-2">History</p>
    </div>
    <!-- Medicine -->
    <div class="text-center cat-filter">
      <i class="filter fas fa-stethoscope fa-2x mr-3" title="Medicine"></i>
      <p class="ml-3 mt-2">Medicine</p>
    </div>
    <!-- Oceanography -->
    <div class="text-center cat-filter">
      <i class="filter fas fa-water fa-2x mr-4" title="Oceanography"></i>
      <p class="ml-3 mt-2">Oceanography</p>
    </div>
    <!-- Physics -->
    <div class="cat-filter">
      <i class="filter fas fa-atom fa-2x" title="Physics"></i>
      <p class="ml-3 mt-2">Physics</p>
    </div>
    <!-- Space  -->
    <div class="text-center cat-filter">
      <i class="filter fas fa-rocket fa-2x mr-3" title="Astronomy"></i>
      <p class="ml-3 mt-2">Astronomy</p>
    </div>
    <!-- Social Studies -->
    <div class="text-center cat-filter">
      <i class="filter fas fa-user-circle fa-2x mr-4" title="social_studies"></i>
      <p class="ml-3 mt-2">Social Studies</p>
    </div>
  </div>
</div>


<!-- Cards-->
<div class="card-container mb-5">
  <!-- Search Bar -->
  <!-- Card -->
  <% @projects.each do |p| %>
    <div class="card <%= p.category %>" style="width: 20%;">
      <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(<%= p.photo %>);">
        <% if user_signed_in? %>
          <div data-project-id="<%= p.id %>">
            <%= link_to toggle_project_favorites_path(p), method: :post, remote: true do %>
              <% if current_user.has_favorited?(p) %>
                <i id="star", class="fas fa-star fa-lg fa-rocket-click"></i>
              <% else %>
                <i id="star", class="fas fa-star fa-lg"></i>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>

      <%= link_to(project_path(p), class: "card-link") do %>
        <div class="card-body">
          <p class="card-title"><%= p.name %></p>
          <p class="card-text"><%= p.short_description %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


<%= javascript_pack_tag "card-filter" %>

