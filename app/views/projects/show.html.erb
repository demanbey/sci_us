<!-- Whole Page -->
<div class="show-page-container">
<!-- Introduction -->
<div class="container project-intro">
  <div class="project-name-photo col-sm-12 col-md-8 col-lg-8">
    <br>
    <h2><strong><%= @project.name %></strong></h2>
    <br>
    <h5>Research lead by <%#= @project.user.first_name unless @project.user.first_name.blank? %> <%#= @project.user.last_name unless @project.user.last_name.blank? %></h5>
    <br>
    <%= cl_image_tag(@project.photo, crop: :fill, gravity: :face, class: "project-photo") %>
    <div class="category-triangle" id="triangle">
      <p id="category">Category: <%=@project.category.capitalize%></p>
    </div>
    <!-- Need to make logic work -->

    <% if user_signed_in? %>
    <div class="project-favorite">
      <div>
        <p>Save this project to your favorites</p>
      </div>
      <div data-project-id="<%= @project.id %>">
        <%= link_to toggle_project_favorites_path(@project.id), method: :post, remote: true do %>
          <% if current_user.has_favorited?(@project) %>
            <i id="star star-show", class="fas fa-star fa-lg fa-rocket-click"></i>
          <% else %>
            <i id="star star-show", class="fas fa-star fa-lg"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
    <!-- Put users who are backing the project -->
    <!-- Add a line showing how much funding is desired  -->
    <!-- Stripe payment button  -->
    <h5>Enjoy this project? Help fund the research.</h5>
    <div class="fund-button">
      <div>
        <%= form_tag donations_path do %>
          <%= hidden_field_tag 'project_id', @project.id %>
          <%= submit_tag 'Fund Project', class: 'btn btn-info', id: 'donate-btn'%>
        <% end %>
      </div>
      <!-- Progress Bar -->
      <div class="progress-funding-amounts">
        <div class="progress" style="color: black; height: 30px; background-color: lightgrey; width: 250px; border-radius: 50px;">
          <div id="progress" class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: <%= @donation_progress %>%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
            <%= @donation_progress %>
          </div>
        </div>
        <div class="funding-amounts">
           $ <%= @project.current_funding %>

          $ <%= @project.desired_funding %>

        </div>
      </div>
    </div>
  </div>
    <!-- Project Info -->
    <!-- <div class="project-info mr-5"> Reintroduce next week-->
  <div class="d-none col-md-1 col-lg-1">
  </div>

  <div class="project-info col-sm-12 col-md-4 col-lg-4">
    <h2>About this project</h2>
    <p><%=@project.about%></p>
  </div>
</div>

<hr>

<div class="container project-significance">
  <div class="project-name-photo col-md-8">
<!--     <div class="show-section">
      <h2>What is the context of this research?</h2>
      <p><%= @project.context %></p>
    </div> -->
    <div class="show-section">
      <h2>Why is it significant?</h2>
      <p><%=@project.significance%></p>
    </div>
    <div class="show-section">
      <h2>Project Goals</h2>
      <p><%= @project.goals %></p>
    </div>
  <!--   <div class="show-section">
      <h2>Project Timeline</h2>
      <p><%= @project.timedate %></p>
      <p><%= @project.timetext %></p>
    </div> -->
    <%#= link_to "Learn More", { controller: :projects, action: :project_counter }  , class: 'btn btn-light', data: @project.category, id: 'participate-btn', method: :post %><!-- <p>(Warning: You will be redirected to the project website)</p>
    <i class="fas fa-sign-out-alt fa-2x" align=center id="exit"></i> -->
    <div class="show-section">
      <h2>Meet the team</h2>

      <p><%=@project.org_description%></p>
      <p><%#= @project.user_id %></p>
      <%#= @project.user.photo %>
      <p><%= @project.rresearcherbio %></p>
    </div>

    <i class="fas fa-sign-out-alt fa-2x" id="exit"></i><%= link_to "Participate", { controller: :projects, action: :project_counter }  , class: 'btn btn-light', data: @project.category, id: 'participate-btn',target: :_blank, method: :post %>
  </div>
</div>
