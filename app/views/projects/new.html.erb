<div class="container mt-4 mb-5">
  <h1 class="mb-3">Create your own research project!</h1>
  <div class="form-inputs">
    <%= simple_form_for [@project] do |f| %>
      <%= f.input :name %>
      <%= f.input :organization %>
      <%= f.input :org_description, label: 'Tell a bit about your organization' %>
      <%= f.input :url, label: 'URL' %>
      <%= f.input :short_description, label: 'Short description of the project - what are its main features? (100 characters or less)' %>
      <%= f.input :long_description, label: 'Tell more in detail about the project and what a user will expect from participating' %>
      <%= f.input :location %>
      <%= f.input :category %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
  </div>

      <div class="form-actions">
        <%= f.submit "Submit Your Project", class: "btn btn-primary mt-4" %>
      </div>
    <% end %>
</div>

