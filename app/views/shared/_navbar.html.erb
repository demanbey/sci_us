<% if @nav_fixed %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon" id="nav-fixed">
<% else %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
<% end %>

  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.jpg", class: "avatar", width: 50, id: "logo" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <!-- <li class="nav-item"> -->
          <%# if @homepage %>
            <!-- <a class="nav-link", href="/#about", id="about-link">About</a> -->
          <%# end %>

        <li class="nav-item">
          <%= link_to "Create Project", new_project_path, id: "nav-share", class: "nav-link mr-2" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo?  %>
            <%= cl_image_tag current_user.photo, width: 300, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, default_image: 'iufn8gvtp5m7zn0bdjnw', 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag('https://cdn1.iconfinder.com/data/icons/navigation-elements/512/user-login-man-human-body-mobile-person-512.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
        </li>
        <li class="nav-item">
          <% if @homepage %>
            <a class="nav-link" href="/#the sciUs story">About</a>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link btn btn-sign-up" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
