<div class="paid-donation-container">
  <div class="paid-donation-card">
    <!-- Header -->
    <h5 align=center>Thank You for Backing <strong><%= @donation.project.name %></strong>,  <%= @donation.user.first_name  %>!</h5>
    <br>
    <!-- Icon -->
    <div align=center><i class="fas fa-hand-holding-heart fa-4x" id="heart-hand"></i></div>
    <br>
    <br>
    <!-- Payment Info -->
    <h5 align=center>Amount: <%= humanized_money_with_symbol(@donation.amount) %> CAD</h5>
    <h5 align=center>Status: <%= @donation.state.capitalize %></h5>
    <br>
    <br>
    <!-- Links -->
    <div class=donation-links>
      <p align=center> <%= link_to "Browse Projects", projects_path, class: "btn btn-secondary" %></p>
      <p align=center> <%= link_to "Back to Project", project_path(@donation.project_id), class: "btn btn-light" %></p>
    </div>
  </div>
</div>
